{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "javascript": {
    "globals": ["Liveblocks"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noForEach": "off",
        "noBannedTypes": "off",
        "noStaticOnlyClass": "off"
      },
      "style": {
        "noNonNullAssertion": "off",
        "useConst": "off",
        "noParameterAssign": "off"
      },
      "suspicious": {
        "noExplicitAny": "off",
        "noArrayIndexKey": "off",
        "noImplicitAnyLet": "off",
        "noShadowRestrictedNames": "off",
        "noAssignInExpressions": "off",
        "noThenProperty": "off",
        "noRedeclare": "off",
        "noExportsInTest": "off"
      },
      "a11y": {
        "useSemanticElements": "off",
        "noLabelWithoutControl": "off",
        "useFocusableInteractive": "off",
        "noSvgWithoutTitle": "off",
        "useButtonType": "off",
        "useHtmlLang": "off",
        "useKeyWithClickEvents": "off"
      },
      "correctness": {
        "useExhaustiveDependencies": "off",
        "noUnreachable": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80
  },
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "ignore": [
      "packages/design-system/components/ui/**",
      "packages/design-system/lib/**",
      "packages/design-system/hooks/**",
      "packages/collaboration/config.ts",
      "apps/docs/**/*.json",
      "apps/email/.react-email/**",
      "apps/web/lib/optimizations/bundle-optimization.ts",
      "node_modules/**",
      "dist/**",
      ".next/**",
      "build/**",
      ".turbo/**",
      "turbo/**",
      "coverage/**",
      "**/.turbo/**",
      "**/node_modules/**"
    ]
  }
}
