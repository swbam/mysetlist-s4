{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "cd ../.. && pnpm build --filter=web",
  "installCommand": "cd ../.. && pnpm install --frozen-lockfile",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "regions": ["iad1", "sfo1", "lhr1"],
  "functions": {
    "apps/web/app/api/cron/**": {
      "maxDuration": 300
    },
    "apps/web/app/api/sync/**": {
      "maxDuration": 300
    },
    "apps/web/app/api/admin/**": {
      "maxDuration": 60
    },
    "apps/web/app/api/search/**": {
      "maxDuration": 30
    },
    "apps/web/app/api/trending/**": {
      "maxDuration": 30
    }
  },
  "crons": [
    {
      "path": "/api/cron/email-processing",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/cron/hourly-update", 
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/daily-sync",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/cron/weekly-digest",
      "schedule": "0 8 * * 1"
    },
    {
      "path": "/api/cron/health-check",
      "schedule": "*/10 * * * *"
    },
    {
      "path": "/api/cron/trending-update",
      "schedule": "0 */6 * * *"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options", 
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/monitoring/(.*)",
      "destination": "https://o4504609404448768.ingest.us.sentry.io/$1"
    }
  ]
}
