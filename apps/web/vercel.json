{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "cd ../.. && pnpm build --filter=web",
  "installCommand": "cd ../.. && pnpm install",
  "crons": [
    {
      "path": "/api/cron/email-processing",
      "schedule": "0 12 * * *"
    },
    {
      "path": "/api/cron/daily-reminders", 
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/cron/weekly-digest",
      "schedule": "0 8 * * 1"
    }
  ]
}