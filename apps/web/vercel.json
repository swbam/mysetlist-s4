{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "ignoreCommand": "node scripts/skip-ci.js",
  "crons": [
    {
      "path": "/api/cron/email-processing",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/cron/daily-reminders", 
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/cron/weekly-digest",
      "schedule": "0 8 * * 1"
    }
  ]
}
