{
  "name": "next-forge",
  "version": "5.0.2",
  "bin": {
    "next-forge": "dist/index.js"
  },
  "files": [
    "dist/index.js"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "ultracite lint",
    "format": "ultracite format",
    "test": "turbo test",
    "typecheck": "turbo typecheck",
    "analyze": "turbo analyze",
    "translate": "turbo translate",
    "boundaries": "turbo boundaries",
    "bump-deps": "npx npm-check-updates --deep -u -x react-day-picker",
    "bump-ui": "npx shadcn@latest add --all --overwrite -c packages/design-system",
    "db:push": "cd packages/database && pnpm push",
    "db:generate": "cd packages/database && pnpm generate",
    "db:migrate": "cd packages/database && pnpm migrate",
    "db:studio": "cd packages/database && pnpm studio",
    "clean": "git clean -xdf node_modules",
    "analyze:web": "cd apps/web && ANALYZE=true pnpm build",
    "perf:lighthouse": "npx lighthouse https://localhost:3001 --view",
    "perf:check": "pnpm build && pnpm typecheck && pnpm test",
    "deploy": "./scripts/deploy.sh",
    "deploy:prod": "./scripts/deploy.sh production",
    "edge:secrets": "./scripts/setup-edge-function-secrets.sh",
    "vercel": "vercel",
    "vercel:prod": "vercel --prod",
    "all": "pnpm install && pnpm build && pnpm test",
    "updateit": "supabase db repair && supabase db push && supabase functions deploy scheduled-sync && vercel env pull .env.production",
    "check:env": "tsx scripts/check-env.ts",
    "check:env:test": "tsx scripts/check-env.ts --test-apis",
    "sync:artists": "tsx scripts/sync-trending-artists.ts",
    "test:e2e": "tsx scripts/comprehensive-e2e-test.ts --npm-script",
    "allofit": "pnpm check:env && pnpm sync:artists && sleep 5 && pnpm test:e2e",
    "seed": "tsx scripts/seed-database.ts",
    "seed:mock": "tsx scripts/seed-mock-data.ts",
    "seed:mock:clear": "tsx scripts/seed-mock-data.ts --clear",
    "seed:comprehensive": "tsx scripts/seed-comprehensive-data.ts",
    "seed:all": "pnpm seed:mock && pnpm sync:artists"
  },
  "devDependencies": {
    "@auto-it/first-time-contributor": "^11.3.0",
    "@biomejs/biome": "1.9.4",
    "@repo/typescript-config": "workspace:*",
    "@turbo/gen": "^2.5.3",
    "@types/node": "^24.0.10",
    "@types/react": "^18.2.35",
    "@types/react-dom": "^18.2.14",
    "tsup": "^8.5.0",
    "tsx": "^4.20.3",
    "turbo": "^2.5.3",
    "typescript": "^5.8.3",
    "ultracite": "^4.2.5",
    "vitest": "^3.1.4"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@10.12.4",
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "commander": "^14.0.0",
    "framer-motion": "^11.0.0",
    "keen-slider": "^6.8.6"
  },
  "type": "module"
}
