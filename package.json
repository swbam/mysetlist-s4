{
  "name": "mysetlist",
  "private": true,
  "packageManager": "pnpm@10.13.1",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "build": "turbo build --filter=web",
    "build:all": "turbo build",
    "dev": "turbo dev --filter=web",
    "dev:all": "turbo dev",
    "start": "turbo start --filter=web",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "test:watch": "turbo test:watch",
    "clean": "turbo clean",
    "format": "biome check . --write",
    "format:check": "biome check .",
    "db:generate": "cd packages/database && npx drizzle-kit generate",
    "db:migrate": "cd packages/database && npx drizzle-kit migrate",
    "db:push": "cd packages/database && npx drizzle-kit push",
    "db:studio": "cd packages/database && npx drizzle-kit studio",
    "db:pull": "cd packages/database && npx drizzle-kit pull",
    "validate:env": "cd apps/web && pnpm validate:env",
    "boundaries": "pnpm dlx @repo/boundaries check",
    "bump-deps": "pnpm dlx @repo/bump-deps"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "pnpm": {
    "overrides": {
      "react": "^19.1.0",
      "react-dom": "^19.1.0",
      "@types/react": "19.1.5",
      "@types/react-dom": "19.1.5"
    },
    "ignoredBuiltDependencies": [
      "@biomejs/biome",
      "@sentry/cli",
      "@tailwindcss/oxide",
      "es5-ext",
      "esbuild",
      "msgpackr-extract",
      "sharp"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^24.3.0",
    "turbo": "^2.3.3",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@paralleldrive/cuid2": "^2.2.2",
    "@react-email/components": "0.0.3",
    "@supabase/supabase-js": "^2.55.0",
    "bullmq": "^5.58.1",
    "dotenv": "^17.2.1",
    "ioredis": "^5.7.0"
  }
}