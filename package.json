{
  "name": "mysetlist",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "//": "=== DEVELOPMENT ===",
    "dev": "turbo dev",
    "build": "turbo build",
    "start": "cd apps/web && pnpm start",
    
    "//": "=== CODE QUALITY ===",
    "lint": "biome check --diagnostic-level=error",
    "lint:fix": "biome check --write",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    
    "//": "=== DATABASE ===",
    "db:push": "cd packages/database && pnpm push",
    "db:generate": "cd packages/database && pnpm generate",
    "db:migrate": "cd packages/database && pnpm migrate",
    "db:studio": "cd packages/database && pnpm studio",
    "db:seed": "tsx scripts/seed-top-artists-direct.ts",
    
    "//": "=== DATA SYNC ===",
    "sync:artists": "tsx scripts/sync-trending-artists.ts",
    "sync:popular": "tsx scripts/sync-popular-artists.ts",
    "sync:trending": "tsx scripts/initialize-trending-data.ts",
    
    "//": "=== DEPLOYMENT ===",
    "deploy": "tsx scripts/deploy-all.ts",
    "deploy:preview": "vercel",
    "deploy:prod": "vercel --prod",
    
    "//": "=== UTILITIES ===",
    "clean": "git clean -xdf node_modules .turbo .next",
    "check:env": "tsx scripts/check-env.ts",
    "analyze": "cd apps/web && ANALYZE=true pnpm build"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@repo/typescript-config": "workspace:*",
    "@supabase/supabase-js": "^2.52.1",
    "@types/node": "^24.0.10",
    "@types/react": "^19.1.5",
    "@types/react-dom": "^19.1.5",
    "dotenv": "^16.6.1",
    "tsx": "^4.20.3",
    "turbo": "^2.5.3",
    "typescript": "^5.8.3",
    "vercel": "^44.5.0"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@10.13.1",
  "dependencies": {
    "@paralleldrive/cuid2": "^2.2.2",
    "@react-email/components": "^0.5.0",
    "postgres": "^3.4.7"
  }
}