{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "nextjs",
  "buildCommand": "turbo run build --filter=web",
  "installCommand": "pnpm install --frozen-lockfile",
  "outputDirectory": "apps/web/.next",
  "devCommand": "turbo run dev --filter=web",
  "settings": {
    "nodeVersion": "20.x"
  },
  "functions": {
    "apps/web/app/api/sync/**": {
      "maxDuration": 300
    },
    "apps/web/app/api/admin/**": {
      "maxDuration": 60
    },
    "apps/web/app/api/search/**": {
      "maxDuration": 30
    },
    "apps/web/app/api/trending/**": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/monitoring/(.*)",
      "destination": "https://o4504609404448768.ingest.us.sentry.io/$1"
    }
  ]
}