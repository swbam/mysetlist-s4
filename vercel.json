{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "cd apps/web && pnpm build",
  "outputDirectory": "apps/web/.next",
  "installCommand": "pnpm install --frozen-lockfile",
  "regions": ["iad1"],
  "git": {
    "deploymentEnabled": {
      "main": true,
      "mysetlist-completion-fix": true
    }
  },
  "crons": [
    {
      "path": "/api/cron/trending-update",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/daily-sync",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/cron/email-processing",
      "schedule": "*/15 * * * *"
    },
    {
      "path": "/api/cron/hourly-update",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/sync-popular-artists",
      "schedule": "0 6 * * *"
    },
    {
      "path": "/api/cron/weekly-digest",
      "schedule": "0 9 * * 1"
    },
    {
      "path": "/api/cron/backup",
      "schedule": "0 3 * * *"
    },
    {
      "path": "/api/cron/analytics",
      "schedule": "0 1 * * *"
    },
    {
      "path": "/api/cron/health-check",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/cron/keep-alive",
      "schedule": "*/10 * * * *"
    },
    {
      "path": "/api/cron/cache-warm",
      "schedule": "*/30 * * * *"
    },
    {
      "path": "/api/cron/close-polls",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/cron/lock-setlists",
      "schedule": "0 23 * * *"
    },
    {
      "path": "/api/cron/daily-reminders",
      "schedule": "0 8 * * *"
    },
    {
      "path": "/api/cron/sync-external-apis",
      "schedule": "0 4 * * *"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=63072000; includeSubDomains; preload"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ]
}
