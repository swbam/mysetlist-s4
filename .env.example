# MySetlist – Environment Variables Template
# =========================================
# NOTE: Copy this file to `.env.local` (for local dev) or add the same keys to
# the Vercel / Supabase dashboard for Preview / Production deployments.
# All values below are **placeholders** – replace with your real credentials.

#############################
# Core Application URLs
#############################
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_WEB_URL=http://localhost:3001
NEXT_PUBLIC_API_URL=http://localhost:3002
NEXT_PUBLIC_DOCS_URL=http://localhost:3004

#############################
# Supabase
#############################
NEXT_PUBLIC_SUPABASE_URL=https://YOUR-PROJECT.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=YOUR_SUPABASE_ANON_KEY
SUPABASE_SERVICE_ROLE_KEY=YOUR_SUPABASE_SERVICE_ROLE_KEY
SUPABASE_JWT_SECRET=YOUR_SUPABASE_JWT_SECRET

# Optional: Supabase MCP (functions & cron) – fill in if using MCP
SUPABASE_MCP_JWT_SECRET=
SUPABASE_MCP_PROJECT_REF=

#############################
# Database
#############################
DATABASE_URL=postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DIRECT_URL=${DATABASE_URL}

#############################
# External API Credentials
#############################
SPOTIFY_CLIENT_ID=YOUR_SPOTIFY_CLIENT_ID
SPOTIFY_CLIENT_SECRET=YOUR_SPOTIFY_CLIENT_SECRET
TICKETMASTER_API_KEY=YOUR_TICKETMASTER_API_KEY
SETLISTFM_API_KEY=YOUR_SETLISTFM_API_KEY

#############################
# Cron / Internal Auth
#############################
CRON_SECRET=REPLACE_WITH_RANDOM_SECRET

#############################
# Build / Runtime Flags
#############################
# NEXT_RUNTIME can be "nodejs" or "edge". Leave blank to use default.
NEXT_RUNTIME=nodejs
# ANALYZE=true enables bundle analyzer during build
ANALYZE=

# Email Service (Resend)
RESEND_API_KEY=
RESEND_TOKEN=
RESEND_FROM=
EMAIL_FROM=noreply@mysetlist.com

# Application URLs
NEXT_PUBLIC_APP_ENV=production

# Analytics (optional)
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com

# Sentry (optional)
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_AUTH_TOKEN=