{
  "name": "@repo/external-apis",
  "version": "0.0.0",
  "description": "External API clients and sync services for TheSet",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./clients": {
      "types": "./src/clients/index.ts",
      "default": "./src/clients/index.ts"
    },
    "./services": {
      "types": "./src/services/index.ts",
      "default": "./src/services/index.ts"
    },
    "./utils": {
      "types": "./src/utils/index.ts",
      "default": "./src/utils/index.ts"
    },
    "./types": {
      "types": "./src/types/index.ts",
      "default": "./src/types/index.ts"
    }
  },
  "scripts": {
    "build": "tsc --skipLibCheck",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "lint": "eslint src --ext .ts,.tsx",
    "sync:initial": "tsx src/cli.ts initial",
    "sync:daily": "tsx src/cli.ts daily",
    "sync:artist": "tsx src/cli.ts artist",
    "sync:location": "tsx src/cli.ts location"
  },
  "dependencies": {
    "@repo/database": "workspace:*",
    "@t3-oss/env-nextjs": "^0.13.4",
    "@upstash/redis": "^1.28.0",
    "commander": "^11.1.0",
    "postgres": "^3.4.7",
    "server-only": "^0.0.1",
    "zod": "^3.25.28"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@types/node": "24.0.10",
    "tsx": "^4.7.0",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "react": "^18.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  }
}
