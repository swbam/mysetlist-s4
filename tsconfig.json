{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "Default",
	"compilerOptions": {
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"incremental": false,
		"isolatedModules": true,
		"lib": ["es2015", "es2022", "DOM", "DOM.Iterable"],
		"module": "NodeNext",
		"moduleDetection": "force",
		"moduleResolution": "NodeNext",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "ES2022",
		"strictNullChecks": true,
		"jsx": "preserve",
		"typeRoots": ["./types", "./node_modules/@types"]
	},
	"exclude": [
		"apps",
		"packages",
		"node_modules",
		"supabase/functions",
		"scripts/**/*.ts"
	]
}
